    <div class="site-section">
        <div class="container">
            <div class="row">
                <div class="col-md-6blog-content">
                    <div class="comment-form-wrap pt-5">
                        <h3 class="mb-5">Log In</h3>
                        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "modal-content" ) do |f| %>
                        <div class="form-group">
                            <%= f.label :email %><br />
                            <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
                        </div>
                        <div class="form-group">
                            <%= f.label :password %><br />
                            <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
                        </div>

                        <div class="form-group">
                            <%= f.check_box :remember_me %>
                            <%= f.label :remember_me %>
                        </div>
                        <div class="form-group">
                            <%= f.submit "Log in", class: "btn btn-primary btn-md text-white" %>
                        </div>

                        <% end %>
                    </div>
                    <%= render "devise/shared/links" %>
                </div>
            </div>
        </div>
    </div>