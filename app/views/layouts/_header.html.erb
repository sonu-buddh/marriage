<header class="site-navbar site-navbar-target" role="banner">
    <nav class="navbar navbar-expand-md ">
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav">
                <div class="site-logo">
                    <%= link_to "Marrido", root_path, class: "font-weight-bold"  %>
                </div>
            </div>
            <div class="navbar-nav ml-auto">
                <%= link_to "Home", root_path, class: "nav-item nav-link  #{ 'active' if active_page?(root_path) }"  %>
                <%= link_to "Day Counter", day_counter_path, class: "nav-item nav-link  #{ 'active' if active_page?(day_counter_path) }"  %>
                <%= link_to "Contact", contact_path, class: "nav-item nav-link  #{ 'active' if active_page?(contact_path) }"  %>
                <%= link_to "Photography", photograpy_path, class: "nav-item nav-link  #{ 'active' if active_page?(contact_path) }"  %>
                <% if user_signed_in? %>
                <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "nav-item nav-link" %>
                <% else %>
                <%= link_to 'Login', new_user_session_path, class: "nav-item nav-link" %>
                <% end %>
            </div>
        </div>
    </nav>


</header>


<div class="ftco-blocks-cover-1">
    <div class="site-section-cover overlay">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-4 col-md-offset-8">
                    <h1 class="mb-3 text-primary">Wedding &amp; Event Photographer</h1>
                </div>
            </div>
        </div>
    </div>
</div>