<div class="site-section">
    <div class="container">

        <div class="row mb-5 ">
            <div class="col-md-7 text-center mx-auto">
                <span class="subtitle-39293">Contact</span>
                <h2 class="serif">Get In Touch</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8 mb-5">
                <%= form_tag '/contact_me', method: :post do %>
                    <div class="form-group row">
                        <div class="col-md-6 mb-4 mb-lg-0">
                            <%= text_field_tag :first_name, params[:first_name], placeholder: 'First Name', class: 'form-control' %>
                        </div>
                        <div class="col-md-6">
                            <%= text_field_tag :last_name, params[:last_name], placeholder: 'Last Name', class: 'form-control' %>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-12">
                            <%= text_field_tag :email, params[:email], placeholder: 'Email address', class: 'form-control' %>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-12">
                            <%= text_area_tag :message, params[:message], col: "30", rows: "10", placeholder: 'Enter Messages...', class: 'form-control' %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6 mr-auto">
                            <%= submit_tag "Send Message", class: 'btn btn-block btn-primary text-white py-3 px-5' %>
                        </div>
                    </div>
                <% end %>
            </div>
            <div class="col-lg-4 ml-auto">
                <div class="bg-white p-3 p-md-5">
                    <h3 class="text-black mb-4">Contact Info</h3>
                    <ul class="list-unstyled footer-link">
                        <li class="d-block mb-3">
                            <span class="d-block text-black">Address:</span>
                            <span>108, Laxmi Narayan Nagar, Karodiya Road Gorwa , Vadodara, Gujarat 390016</span></li>
                        <li class="d-block mb-3"><span class="d-block text-black">Phone:</span><span>+91 9033381745</span></li>
                        <li class="d-block mb-3"><span class="d-block text-black">Email:</span><span>veeraryan92@gmail.com</span></li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
</div> <!-- END .site-section -->