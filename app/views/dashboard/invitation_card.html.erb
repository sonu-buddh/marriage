    <div class="site-section">
        <div class="container">

            <div class="row mb-5 ">
                <div class="col-md-7 text-center mx-auto">
                    <span class="subtitle-39293">Fill the Details</span>
                    <h2 class="serif">Get The Card</h2>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8 mb-5">
                    <%= form_tag '/dashboard/create_invitation', method: :post do %>
                    <div class="form-group row">
                        <div class="col-md-6 mb-4 mb-lg-0">
                            <%= text_field_tag :name, params[:name], placeholder: 'Enter Name', class: 'form-control' %>
                        </div>
                        <div class="col-md-6">
                            <%= text_field_tag :phone, params[:phone], placeholder: 'Enter Phone', class: 'form-control' %>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-12">
                            <%= text_field_tag :place, params[:place], placeholder: 'Enter place', class: 'form-control' %>
                        </div>
                    </div>

                 
                    <div class="form-group row">
                        <div class="col-md-6 mr-auto">
                            <%= submit_tag "Submit", class: 'btn btn-block btn-primary text-white py-3 px-5' %>
                        </div>
                    </div>
                    <% end %>
                </div>

            </div>

        </div>
    </div>